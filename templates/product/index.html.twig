{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

<div class="container">
<style>
  .lesproduits{
    display: flex;
    width: 100%
    flex-direction: row;
  }
  .produit{
    margin-left: auto;
    margin-right: auto;
  }
</style>
{% for message in app.flashes("success") %}
<div class="alert alert-success" role="alert">
    {{message}}
</div>
{% endfor %}
<div class="lesproduits">
  {% for product in products %}

  <div class="card produit" style="width: 18rem;">
      <img src="{{asset("uploads/"~product.image)}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"> {{ product.name }}</h5>
        <p class="card-text">{{ product.description | raw }}</p>
        <p class="card-text">
          <a href="#" class="stretched-link text-danger" style="position: relative;"><span>Prix:</span> {{ product.price}}</a>
        </p>
        <p class="card-text bg-light" style="transform: rotate(0);">
          <span>stock: </span> {{ product.stock }}
        </p>
        <form action="{{path("addToCart",{id:product.id})}}" method= "GET">
        {% if app.session.get("cart")[product.id] is defined %}
              <input name="quantity" type="number" class="qty" id="quantity{{product.id}}" value="{{app.session.get("cart")[product.id]}}"></input>
        {% else %}
              <input name="quantity" type="number" class="qty" id="quantity{{product.id}}" value="0"></input>
        {% endif %}

            <button type="submit" id="{{product.id}}" class="button">add</button>
          </form>
  {# value="{{ app.session.get("cart")[product.id] }}">
  <button type="submit" class="btn btn-secondary col-6">Mettre Ã  jour</button>
  {% else %}
  value="1">
  <button type="submit" class="btn btn-secondary col-6">Ajouter au panier</button>
  {% endif %} #}
      </div>
    </div>
    {# <a href="{{path("addToCart",{id:product.id})}}">add</a> #}

    {% endfor %}
  </div>
</div>
  
{% endblock %}