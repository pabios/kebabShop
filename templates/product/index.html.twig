      <h5 class="card-title"> {{ product.name }}</h5>
      <p class="card-text">{{ product.description | raw }}</p>
      <p class="card-text">
        <a href="#" class="stretched-link text-danger" style="position: relative;"><span>Prix:</span> {{ product.price}}</a>
      </p>
      <p class="card-text bg-light" style="transform: rotate(0);">
        <span>stock: </span> {{ product.stock }}
      </p>
       

      <form action="{{path("addToCart",{id:product.id})}}">
        {% if app.session.get("cart")[product.id] is defined %}
              <input class="form-control" name="quantity" type="number" value="{{app.session.get("cart")[product.id]}}"></input>
        {% else %}
              <input class="form-control" name="quantity" type="number" value="0"></input>
        {% endif %}
  
            <button type="submit">submit</button>
          </form>

    </div>
   <a href="{{path("addToCart",{id:product.id})}}">add</a>

